<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Games RODO</title>
</head>

<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>

    <main>

<!-- ------------------------------------------------------------------------------------------- -->
        <div class="jumbotron py-3" id="agregar">
            <h1 class="pb-4 text-center">Productos</h1>
            <div class="container" style="    width: 80%;
            background: #ffffffbf;
            border-radius: 2%;
            padding: 1em;">
                <form class="form" onsubmit="guardarProducto(event)">
                    <div class="row row-cols-2">
                        <div class="mb-2">
                            <label class="form-label">Nombre:</label>
                            <input type="text" class="form-control" id="nombre" required>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Precio:</label>
                            <input type="text" class="form-control" id="precio" required>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Foto:</label>
                            <input type="text" class="form-control" id="foto" required>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Descripcion:</label>
                            <input type="text" class="form-control" id="descripcion" required>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Codigo:</label>
                            <input type="text" class="form-control" id="codigo" required>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Stock:</label>
                            <input type="text" class="form-control" id="stock" required>
                        </div>
                    </div>
                        <button onclick="location.href='#listado'" type="submit" class="btn btn-secondary">Guardar</button>
                </form>
            </div>
        </div>
        <!-- ----------------------------------------------------------------------------------------- -->
        <div class="d-flex justify-content-around fs-1 m-4">
            <i class="bi bi-xbox"></i>
            <i class="bi bi-playstation"></i>
            <i class="bi bi-nintendo-switch"></i>
        </div>
        <!-- ----------------------------------------------------------------------------------------- -->
        <div class="row m-0">
            <div class="col-sm-12 jumbotron" id="listado">
                <div class="well">
                    <h1 class="text-center py-4">Listado de productos</h1>
                    <div class="container">
                        <h4 class="text-center py-5" id="sinProductos"> - No se encontraron productos - </h4>
                        <div class="row" id="productos">
                        </div>
                    </div>
                </div>
            </div>
        </div>

<!-- ---- Centro de mensajes ------------------------------- -->

        <div class="row m-0" id="chat">
        
            <div class="col-sm-6 py-3 px-0 text-center">
                <div class="jumbotron py-3">
                    <h2 class="pb-4 py-4 text-center">Centro de mensajes</h2>
                    <div class="container" style="    width: 70%;
                            background: #ffffffbf;
                            border-radius: 2%;
                            padding: 1em;">
                        <form onsubmit="return enviarMensaje()">
                            <div class="mb-3">
                                <label class="form-label">Email:</label>
                                <input type="email" id="email" class="form-control" placeholder="Ingrese su email" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"></label>
                                <input type="text" id="mensaje" class="form-control" placeholder="Ingrese su mensaje" required>
                            </div>
                            <button type="submit" class="btn btn-secondary">Enviar</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <hr>
                <h2 class="pt-3 text-center"> Historial de mensajes </h2>
                <table class="table">
                    <div id="listaMensajes" class="d-flex flex-column text-decoration-none"> </div>
                </table>
                <h4 class="text-center py-5" id="sinMensajes"> - No hay mensajes disponibles - </h4>
            </div>

<!-- ---------------------------------------------------------------------------------------------- -->
    </main>

    <footer><%- include('../partials/footer'); %></footer>
    <script src="/js/index.js"></script>
    <script src="/js/producto.js"></script>
    <script src="/js/chat.js"></script>
    <script src="/js/carrito.js"></script>
</body>

</html>